.index{
    width: 100%;
    height: 100vh
}
.index_head{
    width: 100%;
    height: 394rpx;
    position: relative;
}

.index_head_swiper{
    width: 100%;
    height: 100%;
}
.index_head_swiper-swiper{
    width: 100%;
    height: 100%;
}
.index_head_swiper-image{
    width: 100%;
    height: 100%;
}
.index_head_search{
    width: 700rpx;
    height: 64rpx;
    position: absolute;
    left: 25rpx;
    top: 24rpx;
    display: flex;
    align-items: center;
    z-index: 10;
}
.index_head_search-person{
    width: 64rpx;
    height: 64rpx;
    border-radius: 64rpx;
    margin-right: 16rpx;
}
.index_head_bg{
    width: 750rpx;
    height: 20rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    background: #fff;
    border-radius: 10px 10px 0 0;

}
.index_head_search_con{
    display: flex;
    align-items: center;
    padding-right: 4rpx;
    justify-content: space-between;
    border-radius: 8rpx;
    background: #fff;
    width: 622rpx;
    border-radius: 8rpx;
    padding-left: 20rpx;
    height: 64rpx;
}
.index_head_search_con-input{
    width: 446rpx;
}
.inputClass{
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #999;
}
.index_head_search_con-btn{
    width: 154rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    background: #2154F4;
    border-radius: 8rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #FFFFFF;
    box-sizing: border-box;
}
.index_head_search_con-btn-icon{
    width: 18rpx;
    height: 18rpx;
    margin: 0 14rpx 0 30rpx
}
