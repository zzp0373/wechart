.index{
    width: 100%;
    height: 100vh
}
.index_head{
    width: 100%;
    height: 394rpx;
    position: relative;
}

.index_head_swiper{
    width: 100%;
    height: 100%;
}
.index_head_swiper-swiper{
    width: 100%;
    height: 100%;
}
.index_head_swiper-image{
    width: 100%;
    height: 100%;
}
.index_head_search{
    width: 700rpx;
    height: 64rpx;
    position: absolute;
    left: 25rpx;
    top: 24rpx;
    display: flex;
    align-items: center;
    z-index: 10;
}
.index_head_search-person{
    width: 64rpx;
    height: 64rpx;
    border-radius: 64rpx;
    margin-right: 16rpx;
}
.index_head_bg{
    width: 750rpx;
    height: 20rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    background: #fff;
    border-radius: 10px 10px 0 0;

}
.index_head_search_con{
    display: flex;
    align-items: center;
    padding-right: 4rpx;
    justify-content: space-between;
    border-radius: 8rpx;
    background: #fff;
    width: 622rpx;
    border-radius: 8rpx;
    padding-left: 20rpx;
    height: 64rpx;
}
.index_head_search_con-input{
    width: 446rpx;
}
.inputClass{
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #999;
}
.index_head_search_con-btn{
    width: 154rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    background: #2154F4;
    border-radius: 8rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #FFFFFF;
    box-sizing: border-box;
}
.index_head_search_con-btn-icon{
    width: 18rpx;
    height: 18rpx;
    margin: 0 14rpx 0 30rpx
}
.index_con{
    height: 192rpx;
    width: 100%
}
.index_con_box{
    width: 594rpx;
    height: 192rpx;
    margin: 0 78rpx;
    display: flex;
    box-sizing: border-box;
    padding-top: 24rpx;
    justify-content: space-between;

}
.index_con_box-item{
    width: 100rpx;
    height: 118rpx;
    display:flex;
    flex-direction: column;
    align-items: center;
}
.index_con_box-item-image{
    width: 84rpx;
    height: 84rpx;
    border-radius: 42rpx;
}
.index_con_box-item-text{
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #333333;
    line-height: 32rpx;
    margin-top: 11rpx;
}
.index_detail{
    height: 1000rpx;
    background: #fff;
}
.index_detail_con{
    width: 702rpx;
    margin: 0 24rpx;
    box-shadow: 0 1px 6px 0 rgba(0,0,0,0.08);
    border-radius: 12rpx;
    padding-bottom: 24rpx;
}
.index_detail_con_title{
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.index_detail_con_title_left{
    display: flex;
    align-items: center;
}
.index_detail_con_title_left-img{
    width: 32rpx;
    height: 32rpx;
    margin: 0 12rpx 0 24rpx;
}
.index_detail_con_title_left-text{
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #333333;
}
.index_detail_con_title_right-img{
    width: 28rpx;
    height: 28rpx;
    margin: 4rpx 24rpx 0 12rpx;
}
.index_detail_con_title_right-text{
    font-family: PingFangSC-Medium;
    font-size: 24rpx;
    color: #666666;
}
.index_detail_con-item{
    margin: 0 24rpx 24rpx 24rpx;
    width: 654rpx;
    background: #F6F6F9;
    border-radius: 12rpx;
    box-sizing: border-box;
    padding: 24rpx;
}
.index_detail_con-item-title{
    display: flex;
    flex-wrap: wrap;
    font-family: PingFangSC-Regulasr;
    font-size: 28rpx;
    color: #000000;
    line-height: 40rpx;
}
.index_detail_con-item-title-icon{
    display: inline-block
}
.index_detail_con-item-descript{
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666666;
    line-height: 36rpx;
    margin: 12rpx 0;
}
.index_detail_con-item-time{
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666;
    line-height: 32rpx;
}
